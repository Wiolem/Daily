<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buglee.dailysentence.SplashActivity">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        pv:pv_background_color="#fffafafa"
        pv:pv_host_text="DAILY"
        pv:pv_host_text_anim_time="2000"
        pv:pv_host_text_size="16sp"
        pv:pv_particle_text="1.0"
        pv:pv_particle_text_size="14sp"
        pv:pv_spread_anim_time="1000"
        pv:pv_text_anim_time="2000"
        pv:pv_text_color="@color/colorAccent" />

</android.support.design.widget.CoordinatorLayout>
